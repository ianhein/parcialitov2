<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th scope="col">Name (Quantity)</th>
      <th scope="col">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %>  (<%= category.recipes.count %>)</td>
        <td><%= category.description %></td>
        <td><%= link_to 'Show', category, class: 'btn btn-sm btn-primary' %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: 'btn btn-sm btn-secondary' %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class: 'btn btn-xl btn-success' %>
